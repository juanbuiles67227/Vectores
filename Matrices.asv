A=[0 2;0 2;0 1];
B=[0 4;0 -3; 0 5];
plot3(A(1,:),A(2,:),A(3,:))
hold on
plot3(B(1,:),B(2,:),B(3,:)
sc=10
axis([-sc sc -sc sc])
grid on
C=A+B
plot(C(1,:),C(2,:))
A1=[B(1,2) C(1,2);...
    B(2,2) C(2,2)]
plot(A1(1,:),A1(2,:))
B1=[A(1,2) C(1,2);...
    A(2,2) C(2,2)]
plot(A1(1,:),A1(2,:))
plot(B1(1,:),B1(2,:))